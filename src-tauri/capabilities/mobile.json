{
  "identifier": "mobile-capability",
  "platforms": [
    "android",
    "iOS"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "barcode-scanner:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPCACHE/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-appcache-read",
      "allow": [
        {
          "path": "$APPCACHE/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-appcache-write",
      "allow": [
        {
          "path": "$APPCACHE/*"
        }
      ]
    }
  ]
}
